<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:includeFontPadding="false"
        android:paddingLeft="5dp"
        android:paddingTop="30dp"
        android:paddingRight="5dp"
        android:text="Sri Lanka's Number One Wedding Planning Application"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/getstartedadvertisor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="60dp"
        android:text="GET STARTED AS ADVERTISER"
        android:textSize="16dp"
        android:background="@color/red"
        android:clickable="true"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/getstartedcustomer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/getstartedadvertisor"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:text="GET STARTED AS CUSTOMER"
        android:textSize="16dp"
        android:background="@color/red"
        android:clickable="true"
        android:textColor="@color/white"
        />


    <ImageView
        android:layout_width="381dp"
        android:layout_height="359dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="#00FF0000"
        android:backgroundTint="#00FF0000"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getstartedcustomer" />


</androidx.constraintlayout.widget.ConstraintLayout>